btn(colorA = grayflat, colorB = dgrayflat, width = 100px)
	background colorA
	width width
	&:before
		background colorB
.Btn
	position relative
	color white
	text-decoration none
	margin-bottom 2px
	transform translateZ(0)
	backface-visibility: hidden
	padding 0 .5em
	box-sizing border-box
	text-align center
	line-height 50px
	height 50px
	display inline-block
	>.notifcount
		position absolute
		top 1px
		right 4px
		font-size .9em
		font-weight bold
		line-height 1em
		padding .2em
		background redflat
		display none
		border-radius 4px
		&.pending
			display block
		
	&:before
		content ""
		position absolute
		top 0
		left 0 
		right 0
		bottom 0
		z-index -1
		transform scaleY(0)
		transform-origin 50% 100%
		transition all 0.2s
		opacity 0
		transition-timing-function ease-out
		
	&:hover
		color white
		&:before
			transform scaleY(1)	
			opacity 1	
	btn()
	&.Btn--grayXS
		btn(grayflat, dgrayflat, 46px)
	&.Btn--grayS
