.Search
	order 2
	height 50px
	display block
	position absolute
	left 0
	right 0
	top 100%
	&-form
		display flex
		height 50px
		justify-content space-between
	&-select
		background lgrayflat
		color dgrayflat
		border 2px solid grayfla
		border none
		width 20%
		max-width 100px
		
	&-textBtn
		border 2px solid grayflat
		flex-grow 1
		
	&-submitBtn
		line-height 50px
		width 10%
		border none
@media(min-width 1280px)
	.Search
		order 1
		flex-grow 1
		position inherit
		padding-bottom .2
		display flex
		height 50px
		flex-direction column
		justify-content center
		&-form
			height 44px
		&-select
			border none
		&-textBtn
			border none
		&-submitBtn
			height 44px
			border-bottom none
