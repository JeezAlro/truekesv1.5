blackflat = #181D1F
.Location
	background lgrayflat
	color blackflat
	text-align center
	font-size 1.5em
	font-weight 300
	&-mobileDrop
		color blueflat
		cursor pointer
		>.icon
			color blackflat
			transition all .3s
		&.active
			display block
			>.icon
				display inline-block
				transform rotate(180deg)
	&-mobileList
		display none
		list-style none
		padding 0
		margin 0
		&.active
			display block
		
	&-mobileItem
		&:nth-child(odd)
			background ngrayflat
		>a
			padding .5em
			display block
			color blackflat
			text-decoration none
			position relative
			transition all .3s
			&:hover
				background rgba(blackflat,.1)
			&:after
				content "\e015"
				font-family Flaticon
				color blueflat
				position absolute
				left .5em
		